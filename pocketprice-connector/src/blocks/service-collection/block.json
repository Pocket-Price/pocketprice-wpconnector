{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "pocketprice/service-collection",
	"version": "1.0.0",
	"title": "Pocket Price: All Services",
	"category": "widgets",
	"icon": "list-view",
	"description": "Display all services as a complete price list, optionally grouped by category.",
	"keywords": [ "price", "services", "pocket", "collection", "all" ],
	"supports": {
		"html": false,
		"align": [ "wide", "full" ]
	},
	"textdomain": "pocketprice-connector",
	"attributes": {
		"groupByCategory": {
			"type": "boolean",
			"default": true
		},
		"showDescription": {
			"type": "boolean",
			"default": false
		},
		"showDuration": {
			"type": "boolean",
			"default": true
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
